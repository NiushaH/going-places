<h1>Sign In to Going Places</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>


<%= form_tag("/sessions") do %>
<p>
  <%= label_tag "email", "Email: " %>
  <%= text_field_tag "email" %>
</p>
<p>
  <%= label_tag "password", "Password: " %>
  <%= password_field_tag "password" %>
</p>
<%= submit_tag "Sign In" %>
<% end %>